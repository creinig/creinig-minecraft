--
-- Turtle inventory management
--


-- Check if all inventory slots have something in them
-- => items of a new type cannot be picked up
function isFullish()
	for local i=1, 9 do
		if(turtle.getItemCount(i) == 0) then
			return false
		end
	end
	
	return true
end


-- Drop all items in the inventory
function dropAll()
	for local i=1, 9 do
		turtle.select(i)
		turtle.drop()
	end
	
	turtle.select(1)
end