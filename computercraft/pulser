--
-- Central control program for pulsing on a
-- bundled wire. Allows different pulses for each
-- color.
--

os.loadAPI("apis/redstonehelper")

local rsh = redstonehelper

rsh.setDebugging(true)
rsh.setDefaultSides('left', 'back')

rsh.registerPulser("recycler", colors.green, 45)
rsh.registerPulser("piping", colors.yellow, 10)


--
-- Main loop
--
while true do
	sleep (0.1)

	rsh.pulserTick(0.1)
end

